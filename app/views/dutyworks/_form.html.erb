  </div>

  <div class="field">
    <%= form.label :flowwork_id %>
    <%= form.text_field :flowwork_id, id: :dutywork_flowwork_id %>
    <%= form.select :flowwork_id, Flowwork.all.collect {|p| [ p.unitwork.name, p.id ] } %>
  </div>

  <div class="field">
    <%= form.label :seltype %>
    <%= form.select :seltype, Dutyitem.seltypes.keys %>
  </div>

  <div class="field">
    <%= form.label :addtype %>
    <%= form.select :addtype, Dutyitem.addtypes.keys %>
  </div>

  <div class="field">
    <%= form.label :updtype %>
    <%= form.select :updtype, Dutyitem.updtypes.keys %>
  </div>

  <div class="field">
    <%= form.label :deltype %>
    <%= form.select :deltype, Dutyitem.deltypes.keys %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
