<%= form_with(model: dutywork, local: true) do |form| %>
  <% if dutywork.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(dutywork.errors.count, "error") %> prohibited this dutywork from being saved:</h2>

      <ul>
      <% dutywork.errors.full_messages.each do |message| %>
