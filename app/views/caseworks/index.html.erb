<p id="notice"><%= notice %></p>

<h1>Caseworks</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Case flow work</th>
      <th>Buyid</th>
      <th>Buy code</th>
      <th>Buy name</th>
      <th>Sellid</th>
      <th>Sell code</th>
      <th>Sell name</th>
      <th>Salesid</th>
      <th>Sales code</th>
      <th>Sales name</th>
      <th>Status</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caseworks.each do |casework| %>
      <tr>
        <td><%= casework.code %></td>
        <td><%= casework.name %></td>
        <td><%= casework.caseflowwork.name %></td>
        <td><%= casework.buy.id %></td>
        <td><%= casework.buy.code %></td>
        <td><%= casework.buy.name %></td>
        <td><%= casework.sell.id %></td>
        <td><%= casework.sell.code %></td>
        <td><%= casework.sell.name %></td>
        <td><%= casework.sales.id %></td>
        <td><%= casework.sales.code %></td>
        <td><%= casework.sales.name %></td>
        <td><%= casework.status %></td>
        <td><%= casework.remarks %></td>
        <td><%= link_to 'Show', casework %></td>
        <td><%= link_to 'Edit', edit_casework_path(casework) %></td>
        <td><%= link_to 'Destroy', casework, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

