<table class="table table-sm table-striped">
 <thead class="thead-dark">
  <tr>
    <!-- <th scope="col"><div class="d-inline p-1">序</div></th> -->
    <th><p class="d-inline ">代码2</p></th>
    <th><p class="d-inline ">资源</p></th>
    <th><p class="d-inline ">数量</p></th>
    <th><p class="d-inline">价格</p></th>
    <th><p class="d-inline ">合计</p></th>
    <th><p class="p-0 d-none d-sm-inline ">成本价</p></th>
    <th><p class="p-0 d-none d-sm-inline ">成本合计</p></th>
    <th><p class="d-none d-sm-inline ">税率</p></th>
    <th><p class="d-none d-sm-inline ">仓库</p></th>
    <th><p class="d-none d-sm-inline float-right float-none">状态</p></th>
  </tr>
 </thead>

 <tbody>
  <% @casework.caseworklinekinds.each do |caseworklinekind| %>
   <tr>
     <td>
       <div class="d-inline">
         <%= link_to caseworklinekind.kind.code, edit_casework_caseworklinekind_path(caseworklinekind.casework, caseworklinekind)  %>
       </div>
     </td>
     <td><div class="d-inline"><%= caseworklinekind.kind.name %></div></td>
     <td><div class="d-inline"><p class="text-right"><%= caseworklinekind.quantity %></p></div></td>
     <td><div class="d-inline"><p class="text-right"><%= sprintf("%0.02f",caseworklinekind.price) %></p></div></td>
     <td><div class="d-inline"><p class="text-right"><%= number_to_currency(sprintf("%0.02f",caseworklinekind.price_total)) %></p></div></td>

     <td><div class="d-none d-sm-inline"><p class="text-right"><%= sprintf("%0.02f",caseworklinekind.cost) %></p></div></td>
     <td><div class="d-none d-sm-inline"><p class="text-right"><%= sprintf("%0.02f",caseworklinekind.cost_total) %></p></div></td>
     <td><div class="d-none d-sm-inline"><p class="text-right"><%= caseworklinekind.vatgroup %></p></div></td>
     <td><div class="d-none d-sm-inline"><p class="text-right"><%= caseworklinekind.whscode %></p></div></td>
     <td><div class="d-none d-sm-inline"><p class="text-right"><%= caseworklinekind.status %></p></div></td>

   </tr>
  <% end %>
 </tbody>

 <tfoot>
  <tr >
   <!-- <th scope="col"><div class="d-inline"></div></th> -->
   <th scope="col"><div class="d-inline"><p>总计</p></div></th>
   <th scope="col"><div class="d-inline"></div></th>
   <th scope="col"><div class="d-inline"><p class="text-right"><%=  @casework.sum_quan_total %></p></div></th>
   <th scope="col"><div class="d-inline"><p class="text-right"></p></div></th>
   <th scope="col"><div class="d-inline"><p class="text-right"><%=  sprintf("%0.02f", @casework.sum_price_total) %></p></div></th>
   <th scope="col"><div class="d-none d-sm-inline"></div></th>
   <th scope="col"><div class="d-none d-sm-inline"><p class="text-right"><%=  sprintf("%0.02f", @casework.sum_cost_total) %></p></div></th>
   <th scope="col"><div class="d-none d-sm-inline"></div></th>
   <th scope="col"><div class="d-none d-sm-inline"></div></th>
   <th scope="col"><div class="d-none d-sm-inline"></div></th>


  </tr>
 </tfoot>
</table>
