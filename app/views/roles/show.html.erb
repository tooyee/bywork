<p id="notice"><%= notice %></p>

<div class="card-header bg-transparent border-first">
  <div class="card-block border-0">
    <p>
    <strong>RoleName:</strong>
    <%= @role.name %>
    </p>
    <p>
    <strong>created_at:</strong>
    <%= @role.created_at.strftime('%Y年-%m月-%d日 %H时:%M分:%S秒') %>
    </p>
    <p>
    <strong>updated_at:</strong>
    <%= @role.updated_at.strftime('%Y年-%m月-%d日 %H时:%M分:%S秒') %>
    </p>
  </div>
</div>
<!-- role -->
<div class="card-body text-first border-first">
  <table class="table table-sm table-striped">
   <thead class="thead-dark">
    <tr>
      <!-- <th scope="col"><div class="d-inline p-1">序</div></th> -->
      <th><p class="d-inline ">id</p></th>
      <th><p class="d-inline ">user</p></th>
      <th><p class="d-inline ">created_at</p></th>
      <th><p class="d-inline">updated_at</p></th>
    </tr>
   </thead>

   <tbody>
    <% @role.roleconfigs.each do |roleconfigs| %>
     <tr>
       <td><div class="d-inline"><%=  roleconfigs.user.id %></div></td>
       <td><div class="d-inline"><%= link_to roleconfigs.user.name, roleconfigs.user %></div></td>
       <td><div class="d-inline"><%= roleconfigs.user.created_at %></div></td>
       <td><div class="d-inline"><%= roleconfigs.user.updated_at %></div></td>
     </tr>
    <% end %>
   </tbody>

   <tfoot>
    <tr >

    </tr>
   </tfoot>
  </table>
</div>
<!-- dutyitem -->
<div class="card-body text-first border-first">
  <table class="table table-sm table-striped">
   <thead class="thead-dark">
    <tr>
      <th>Role</th>
      <th>Id</th>
      <th>Flowitem</th>
      <th>Seltype</th>
      <th>Addtype</th>
      <th>Updtype</th>
      <th>Deltype</th>
      <th colspan="3"></th>
    </tr>
   </thead>

   <tbody>
    <% @role.dutyitems.each do |dutyitem| %>
     <tr>

       <td><%= link_to dutyitem.flowitem.id, edit_dutyitem_path(dutyitem) %></td>
      <td><%= dutyitem.role.name %></td>
       <td><%= link_to dutyitem.flowitem.name, dutyitem %></td>
       <td><%= dutyitem.seltype %></td>
       <td><%= dutyitem.addtype %></td>
       <td><%= dutyitem.updtype %></td>
       <td><%= dutyitem.deltype %></td>
       <td><%= link_to 'Destroy', dutyitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr>
    <% end %>
   </tbody>

   <tfoot>
    <tr >

    </tr>
   </tfoot>
  </table>
</div>

<div class="card-footer bg-transparent border-first">
  <div class="p-1 form-group row">



  </div>
  <%= link_to 'Edit', edit_user_path(@role) %> |
  <%= link_to 'Back', users_path %>
</div>
