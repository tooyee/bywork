<p id="notice"><%= notice %></p>

<h1>Caseitems</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Flowitem</th>
      <th>Status</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caseitems.each do |caseitem| %>
      <tr>
        <td><%= caseitem.code %></td>
        <td><%= caseitem.name %></td>
        <td><%= caseitem.flowitem.name %></td>
        <td><%= caseitem.status %></td>
        <td><%= caseitem.remarks %></td>
        <td><%= link_to 'Show', caseitem %></td>
        <td><%= link_to 'Edit', edit_caseitem_path(caseitem) %></td>
        <td><%= link_to 'Destroy', caseitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

