<p id="notice"><%= notice %></p>

<h1>Things</h1>

<table>
  <thead>
    <tr>
      <th>Casework</th>
      <th>Kind</th>
      <th>Code</th>
      <th>Name</th>
      <th>Remarks</th>
      <th>Thingtype</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= thing.casework %></td>
        <td><%= thing.kind %></td>
        <td><%= thing.code %></td>
        <td><%= thing.name %></td>
        <td><%= thing.remarks %></td>
        <td><%= thing.thingtype %></td>
        <td><%= thing.status %></td>
        <td><%= link_to 'Show', thing %></td>
        <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
        <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

