<p id="notice"><%= notice %></p>



<div class="card-header bg-transparent border-first">
  <div class="card-block border-0">
          <h1>Users</h1>

  </div>
</div>


<div class="card-body text-first border-first">
  <table class="table table-sm table-striped">
   <thead class="thead-dark">

    <tr>
      <!-- <th scope="col"><div class="d-inline p-1">åº</div></th> -->
      <th><p class="d-inline ">id</p></th>
      <th><p class="d-inline ">name</p></th>
      <th><p class="d-inline ">roles</p></th>
      <th><p class="d-inline ">created_at</p></th>
      <th><p class="d-inline">updated_at</p></th>
       <th colspan="3"></th>


    </tr>
   </thead>

   <tbody>
     <% @users.each do |user| %>
       <tr>
         <td><%= link_to user.id, edit_user_path(user) %></td>
         <td><%= link_to user.name, user %></td>
         <td><% user.roleconfigs.each do |roles| %>
                   //<%= roles.role.name %>;
                   <% end %></td>
         <td><%= user.created_at.strftime('%Y-%m-%d') %></td>
         <td><%= user.updated_at.strftime('%Y-%m-%d') %></td>

         <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
     <% end %>
   </tbody>

   <tfoot>
    <tr >



    </tr>
   </tfoot>
  </table>
</div>

<div class="card-footer bg-transparent border-first">
  <%= link_to 'New User', new_user_path %>


</div>

