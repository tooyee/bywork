<p id="notice"><%= notice %></p>

<h1>Unitworks</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unitworks.each do |unitwork| %>
      <tr>
        <td><%= unitwork.code %></td>
        <td><%= unitwork.name %></td>
        <td><%= link_to 'Show', unitwork %></td>
        <td><%= link_to 'Edit', edit_unitwork_path(unitwork) %></td>
        <td><%= link_to 'Destroy', unitwork, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unitwork', new_unitwork_path %>
