<p id="notice"><%= notice %></p>

<h1>Flowitems</h1>
<h6>
  <%= form_tag("/flowitems/search", method: "get") do %>
    <%= label_tag(:search_id, "类型") %>
    <%= select_tag :search_id, options_for_select(Unititem.all.collect {|p| [ p.name,p.id ] }) %>
    <%= submit_tag("查询") %>
  <% end %>
</h6>

<table>
  <thead>
    <tr>
      <th>组件</th>
      <th>代码</th>
      <th>流程</th>
      <th>备注</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flowitems.each do |flowitem| %>
      <tr>
        <td><%= flowitem.unititem.name %></td>
        <td><%= flowitem.code %></td>
        <td><%= flowitem.name %></td>
        <td><%= flowitem.remarks %></td>
        <td><%= link_to 'Show', flowitem %></td>
        <td><%= link_to 'Edit', edit_flowitem_path(flowitem) %></td>
        <td><%= link_to 'Destroy', flowitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>


</table>

<br>

<%= link_to 'New Flowitem', new_flowitem_path %>
